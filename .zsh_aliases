# Fun√ß√£o para criar e entrar em diret√≥rio
mkcd() {
    mkdir -p "$1" && cd "$1"
}

# Fun√ß√£o para backup r√°pido
backup() {
    if [ $# -eq 0 ]; then
        echo "Uso: backup <arquivo_ou_pasta>"
        return 1
    fi
    cp -r "$1" "$1.backup.$(date +%Y%m%d_%H%M%S)"
}

# Fun√ß√£o para extrair arquivos
extract() {
    if [ -f "$1" ]; then
        case "$1" in
            *.tar.bz2)   tar xjf "$1"     ;;
            *.tar.gz)    tar xzf "$1"     ;;
            *.bz2)       bunzip2 "$1"     ;;
            *.rar)       unrar x "$1"     ;;
            *.gz)        gunzip "$1"      ;;
            *.tar)       tar xf "$1"      ;;
            *.tbz2)      tar xjf "$1"     ;;
            *.tgz)       tar xzf "$1"     ;;
            *.zip)       unzip "$1"       ;;
            *.Z)         uncompress "$1"  ;;
            *.7z)        7z x "$1"        ;;
            *)           echo "'$1' n√£o pode ser extra√≠do via extract()" ;;
        esac
    else
        echo "'$1' n√£o √© um arquivo v√°lido!"
    fi
}

# Fun√ß√£o para encontrar arquivos grandes
findlarge() {
    find . -type f -size +${1:-100M} -exec ls -lh {} \; | awk '{ print $9 ": " $5 }'
}

# Fun√ß√£o para buscar texto em arquivos
findtext() {
    if [ $# -eq 0 ]; then
        echo "Uso: findtext <texto_para_buscar> [extens√£o]"
        return 1
    fi
    
    if [ $# -eq 2 ]; then
        find . -name "*.$2" -type f -exec grep -l "$1" {} \;
    else
        grep -r "$1" .
    fi
}

# Fun√ß√£o para ver uso de porta
port() {
    if [ $# -eq 0 ]; then
        echo "Uso: port <n√∫mero_da_porta>"
        return 1
    fi
    lsof -i :$1
}

# Fun√ß√£o para weather
weather() {
